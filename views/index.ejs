  <body>
  <nav class="orange darken-3">
    <div class="container">
    <div class="nav-wrapper">
      <a href="/" class="left" style="font-size: x-large;">Brewfinder</a>
      <ul class='right'>
        <% if (user) { %>
          <a href="/logout"><i class="material-icons left">trending_flat</i>Log Out</a>
        <% } else { %>
          <a href="/auth/google"><i class="material-icons left">vpn_key</i>Login with Google</a>
        <% } %>
        
      </ul>
    </div>
  </div>
  </nav>
  <main>

  <br>
  <div class='container'>

<div class='row'>
  <form action="/" method="GET">
      <div class="input-field col s12">
        <input id="search" name="search" autocomplete="off" class='form-control' type="text" class="validate" required="required" pattern="[A-Za-z0-9]{1,20}">
        <label for="search">Enter a city</label>
      </div>
      <div class="button col s12" id='button'>
        <button class="btn btn-success orange darken-3"  type="submit">Submit</button>
      </div>
  </form>
</div>


  <div class="row">
    <% if (index!=null) index.forEach(function(e){ %> 
        <div class=" col s12 m4 l3">
          <div class="card #ffb74d orange lighten-5">
            <div class="card-content orange-text">
              <span class="card-title"><%= e.name %></span>
              </a>
            
              <%= e.street %> <%= e.city %>
              <br>
              <% if (e.imagecount>0) {%>
                <div style="color: red;">Images!</div>
              <% } %>  
              </div>
              <div class="card-action">
              <a href='/<%= e.id %> '>Show More</a>
            </div>
          </div>
        </div>
     
    <% }) %> 
</main>
  <footer class="page-footer orange darken-3">
    <div class="container">
      <div class="row">
        <div class="col l6 s12">
          <h5 class="white-text">Footer Content</h5>
          <p class="grey-text text-lighten-4">You can use rows and columns here to organize your footer content.</p>
        </div>
       
      </div>
    </div>
